{{#accordion-list-item
  title=(t 'pipelinesSetting.dataClear')
  detail=(t 'pipelinesSetting.resetData')
  status=status
  statusClass=statusClass
  expandOnInit=false
  expand=(action expandFn)
}}
  {{#if clearing}}
    <button class="btn bg-disabled">
      <i class="icon icon-spinner icon-spin"></i> {{t 'pipelinesSetting.clearing'}}
    </button>
  {{else}}
    {{#if confirmDisable}}
      <button class="btn bg-error" {{action "disable"}}>
        <i class="icon icon-alert"></i> {{t 'pipelinesSetting.sureToClearData'}}
      </button>
    {{else}}
      <button class="btn bg-error" {{action "promptDisable"}}>
        <i class="icon icon-umbrella"></i> {{t 'pipelinesSetting.clearData'}}
      </button>
    {{/if}}
  {{/if}}
{{/accordion-list-item}}