<div class="box mt-20">
    <div class="form-label form-control-static">
      <label class="acc-label">{{t 'newPipelineStep.stepType.image'}}{{field-required}}</label>
    </div>
    <div>
      {{input-suggest
        value=model.imageTag
        choices=pipeline.images
        placeholder="hello-world:latest"
        disabled=(if (eq modalOpts.type 'review') true false)
      }}
    </div>
</div>
<div class="box mt-20">
    <div class="form-label form-control-static">
      <label class="acc-label">{{t 'newReceiver.serviceSelector.label'}}{{field-required}}</label>
    </div>
    <div>
      {{form-key-value
        allowMultilineValue=false
        initialMap=model.serviceSelector
        changed=(action (mut model.serviceSelector))
        addActionLabel="newReceiver.serviceSelector.addActionLabel"
        allowEmptyValue=false
        valuePlaceholder="value"
        editing=(if (eq modalOpts.type 'review') false true)
      }}
      <p class="help-block">{{t 'newReceiver.serviceSelector.help'}}</p>
    </div>
</div>
<div class="row box mt-20">
    <div class="col span-6">
      <label class="acc-label">{{t 'formUpgrade.batchSize.label'}}</label>
      <div>
        {{input-integer min="1" class="form-control" value=model.batchSize}}
      </div>
    </div>

    <div class="col span-6">
      <label class="acc-label">{{t 'formUpgrade.interval.label'}}</label>
      <div class="input-group">
        {{input-integer class="form-control" value=model.interval}}
        <span class="input-group-addon bg-default">{{t 'generic.seconds'}}</span>
      </div>
    </div>
</div>
<div class="box mt-20">
    <label class="acc-label">{{t 'formUpgrade.behavior'}}</label>
    <div class="row">
      <div class="col span-6">
        <label>{{radio-button selection=model.startFirst value=false}}&nbsp;{{t 'formUpgrade.stopFirst.label'}}</label>
        <p class="help-block">{{t 'formUpgrade.stopFirst.detail'}}</p>
      </div>
      <div class="col span-6">
        <label>{{radio-button selection=model.startFirst value=true}}&nbsp;{{t 'formUpgrade.startFirst.label'}}</label>
        <p class="help-block">{{t 'formUpgrade.startFirst.detail'}}</p>
      </div>
    </div>
</div>
